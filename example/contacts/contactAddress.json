{
	"description" : "An Address following the convention of http://www.w3.org/TR/2010/WD-contacts-api-20100121/#idl-def-ContactAddress",
	"type" : "object",
	"properties" : {
		"country" : { "type" : "string", 
                            "required" : false,
                            "description” : "Two letter [ISO 3166-1] country code" },
